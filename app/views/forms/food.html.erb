<h1><center>Food Vendor Registration Form</center> </h1>
&nbsp;
&nbsp;
<%= form_for(@form) do |f| %>

  <%= f.hidden_field(:formtype, :value => 'food') %>
  
  <% if @form.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@form.errors.count, "missing field") %> prohibited this form from being submitted:</h2>

      <ul>
      <% @form.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field_tag(:formtype, "food") %>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Organization Name:</label>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Contact Name:</label>
    <%= f.text_field :user %>
  </div>

  <div class="field">
    <label class="control-label col-sm-2" for="oname">Email:</label>
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Address:</label>
    <%= f.text_field :address %>
  </div>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">City:</label>
    <%= f.text_field :city %>
  </div>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Zip Code:</label>
    <%= f.text_field :zip %>
  </div>
 </div>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Business Phone:</label>
    <%= f.text_field :busphone %>
  </div>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Cell Phone:</label>
    <%= f.text_field :cell %>
  </div>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Website:</label>
    <%= f.text_field :website %>
  </div>
  
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Business ID:</label>
    <%= f.text_field :busID %>
  </div>

  <div class="field">
    <label class="control-label col-sm-2" for="oname">Product(s)/Services:</label>
    <%= f.text_field :product %>
  </div>
  
  
  
  
  <label>Equipment Rental (Optional): </label><br/>
  <%= f.select :numTables, "<option>0</option> <option>1</option> <option>2</option> <option>3</option>".html_safe %>
  <%= label_tag(:table, "6' Table ($10)") %> <br/>
  <%= f.select :numChairs, "<option>0</option> <option>1</option> <option>2</option> <option>3</option>".html_safe %> 
  <%= label_tag(:chair, "Folding Chair ($5)") %> <br/>
  <%= f.select :numbrellas, "<option>0</option> <option>1</option> <option>2</option> <option>3</option>".html_safe %> 
  <%= label_tag(:umbrella, "11' Market Umbrella ($50)") %> <br/>
  <%= f.select :numTents, "<option>0</option> <option>1</option> <option>2</option> <option>3</option>".html_safe %> 
  <%= label_tag(:tent, "10'x10' Food Service Tent ($110)") %>  <br/>
  
    <br>
  <div class="form-group"> 
  Registration Forms
  </div>
  
  <%= hidden_field_tag :facility_op_form_file_name %>
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Food facility operator form:</label>
    <%= f.file_field :facility_op_form %>
  </div>
  
  <br>
  
  <%= hidden_field_tag :kitchen_contract_file_name %>
  <div class="field">
    <label class="control-label col-sm-2" for="oname">Copy of contract for commercial kitchen used to prepare food:</label>
    <%= f.file_field :kitchen_contract %>
  </div>
  
  <br>
  <br>
  <%= hidden_field_tag :DD214_file_name %>
  <div class="field">
    <label class="control-label col-sm-2" for="oname">DD214</label>
    <%= f.file_field :DD214 %>
  </div>
  
  <div class="actions" align="left">
    <%= f.submit %>
  </div>
 
<% end %>
